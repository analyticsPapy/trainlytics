# Application
APP_NAME=Trainlytics
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# Database
DATABASE_URL=postgresql://trainlytics_user:trainlytics_pass@localhost:5432/trainlytics

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Providers - Strava
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret
STRAVA_CALLBACK_URL=http://localhost:8000/api/v1/connectors/strava/callback
STRAVA_WEBHOOK_VERIFY_TOKEN=your_webhook_token

# OAuth Providers - Garmin
GARMIN_CONSUMER_KEY=your_garmin_key
GARMIN_CONSUMER_SECRET=your_garmin_secret

# OAuth Providers - Polar
POLAR_CLIENT_ID=your_polar_client_id
POLAR_CLIENT_SECRET=your_polar_client_secret

# OAuth Providers - Coros
COROS_API_KEY=your_coros_key
COROS_API_SECRET=your_coros_secret

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@trainlytics.com

# File Storage (S3/Minio)
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=trainlytics

# Monitoring
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
